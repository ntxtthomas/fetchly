<%= form_with(model: user) do |form| %>
<% if user.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  <ul>
    <% user.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field mb-3">
  <%= form.label :first_name, style: "display: block" %>
  <%= form.text_field :first_name, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :last_name, style: "display: block" %>
  <%= form.text_field :last_name, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :email, style: "display: block" %>
  <%= form.email_field :email, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :telephone, style: "display: block" %>
  <%= form.text_field :telephone, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :street_address, style: "display: block" %>
  <%= form.text_field :street_address, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :city, style: "display: block" %>
  <%= form.text_field :city, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :state, style: "display: block" %>
  <%= form.text_field :state, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.label :zip, style: "display: block" %>
  <%= form.text_field :zip, class: "form-control" %>
</div>

<div class="field mb-3">
  <%= form.check_box :active, class: "form-check-input" %>
  <%= form.label :active, "Active", class: "form-check-label" %>
</div>

<div>
  <%= form.submit class: "btn btn-primary" %>
</div>
<% end %>