<%= form_with(model: booking) do |form| %>
<% if booking.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

  <ul>
    <% booking.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :owner_id, style: "display: block" %>
  <%= form.collection_select :owner_id, User.all, :id, :email, { prompt: "Select Owner" }, { class: "form-control" } %>
</div>

<div class="field">
  <%= form.label :sitter_id, style: "display: block" %>
  <%= form.collection_select :sitter_id, User.all, :id, :email, { prompt: "Select Sitter" }, { class: "form-control" } %>
</div>

<div class="field">
  <%= form.label :start_date, style: "display: block" %>
  <%= form.date_field :start_date, class: "form-control" %>
</div>

<div class="field">
  <%= form.label :end_date, style: "display: block" %>
  <%= form.date_field :end_date, class: "form-control" %>
</div>

<div class="field">
  <%= form.label :location, style: "display: block" %>
  <%= form.text_field :location, class: "form-control" %>
</div>

<div class="field">
  <%= form.label :booking_status, style: "display: block" %>
  <%= form.select :booking_status, options_for_select(Booking.booking_statuses.map {|key, value| [key.humanize, key]}), { prompt: "Select Status" }, { class: "form-control" } %>
</div>

<div class="field">
  <%= form.label :notes, style: "display: block" %>
  <%= form.text_area :notes, rows: 3, class: "form-control" %>
</div>

<div>
  <%= form.submit %>
</div>
<% end %>